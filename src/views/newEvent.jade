doctype html
html
  head
    // Standard Meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    // Site Properities
    title 社社相关
    link(href='http://fonts.useso.com/css?family=Source+Sans+Pro:400,700|Open+Sans:300italic,400,300,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/semantic.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/homepage.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/topbar.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/clubManger.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/newEvent.css')
    script(src='/javascripts/jquery-1.11.2.js')
    script(src='/javascripts/semantic.js')
    script(src='/javascripts/newEvent.js')
  body#home
    .following.bar.light.fixed
      .insideTopBar
        .column
          .ui.logo.shape
            .sides
              .ui.side.active
                img.ui.image(src='')
          if user
            #topButton(calss='ui right float')
              #second.ui.left.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/logout') logout

          else
            #topButton(calss='ui right float')
              #second.ui.left.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/signup') 注册
              .ui.right.floated.secondary.menu
                .inverted.secondary.pointing.ui.menu
                  a.item(href='/login') 登录
          .bar.ui.large.secondary.network.menu.center
            a#fontLogo.center
              img(src='/images/fontlogo.png', alt='社社相关', height='42', width='120')
    .mainpage
      .bar.mainpage
        .insideMainpageBar
          .ui.two.column.center.aligned.stackable.divided.grid
            .column
              button.ui.button 活动
            .column
              button.ui.button 社团
      .clubManger
        .ui.grid
          .left.floated.twelve.wide.column
            #newLeft.ui.page.grid.stackable.relaxed.feature.segment
              .row
                .column
                  h1.center.aligned.ui.header
                    | 发布新活动
              .row
                .right.floated.six.wide.column
                  p 上传图片
                  img.ui.massive.bordered.image(src='')
                  form#newEvent(action='/club/#{club_id}/newevent', method='post', enctype="multipart/form-data")
                    input#updateImg(required='required', type='file', name='logo')
                    input#newEventName(required='required', type='text', name='newEventName', hidden='')
                    input#newEventTime(required='required', type='date', name='newEventTime', hidden='')
                    input#newEventPlace(required='required', type='text', name='newEventPlace', hidden='')
                    input#newEventType(required='required', type='text', name='newEventType', hidden='')
                    input#newEventTag(required='required', type='text', name='newEventTag', hidden='')
                    input#newEventSummary(required='required', type='text', name='newEventSummary', hidden='')
                .ten.wide.column
                  #form_content.fr-widget.fr-grid.fr_content
                    #newLeftColumn1.column
                      .ui.form.segment
                        .loginForm
                          .field
                            label 活动名称
                            .ui.left.icon.input
                              input(required='required', type='text', id='eventName')
                          .field
                            label 活动时间
                            .ui.left.icon.input
                              input(required='required', type='date', id='eventTime')
                          .field
                            label 活动地点
                            .ui.left.icon.input
                              input(required='required', type='text', id='eventPlace')
                          .field
                            label 类型
                            .ui.left.icon.input
                              input(required='required', type='text', id='eventType')
                          .field
                            label 标签
                            .ui.left.icon.input
                              input(required='required', type='text', id='eventTag')
                          .field
                            label 描述
                            .ui.left.icon.input
                              input(required='required', type='text', id='eventSummary')
                .ui.inverted.section.divider
                .row
                  #button.ui.basic.animated.button.button
                    .visible.content 发布活动
                    .hidden.content
                      i.right.arrow.icon
          .right.floated.four.wide.column
            .ui.animated.selection.list
              .ui.fluid.card
                .image
                  img(src='#{logo}')
                .content
                  a.header(href='./clubManager.html') #{name}
              .ui.section.divider
              .item
                a(href='/club/#{club_id}/newevent') 发布新活动
              //- .item
              //-   a(href='#') 管理活动
              .item
                a(href='/club/#{club_id}/clubComment') 收到的评论
              .item
                a(href='/club/#{club_id}/modifyClubData') 完善社团资料
